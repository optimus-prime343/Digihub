        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^8.1.0",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/platform-socket.io": "^8.3.1",
        "@nestjs/serve-static": "^2.2.2",
        "@nestjs/typeorm": "^8.0.3",
        "@nestjs/websockets": "^8.3.1",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "compression": "^1.7.4",
